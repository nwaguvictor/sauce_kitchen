extends ../layouts/app

block content 
    .container
        h2.title Make An Order Now
        hr
        .order-section
            .order-info
                form.form.order-form(method="POST" action="/orders/create")
                    .form-group
                        label.form-label(for="name") Food Name
                        input.form-control(type="text", name="foodName", id="foodName" readonly="readonly" value=`${food.name.toUpperCase()}`)
                    .form-group
                        input.form-control(type="hidden", name="food", value=`${food._id}`)
                    .form-group
                        label.form-label(for="address") Delivery Address 
                        input.form-control(type="text", name="address", id="address", placeholder="Enter delivery address")
                    button.btn.btn__order(type="submit") Order Now
            .order-item
                .item
                    h3.item__title= food.name.toUpperCase()
                    p.item__price= `NGN ${food.price}`
                    img.item__image(src=`/img/foods/${food.photo}` style={ width: '100%' })
                    .description 
                        h3 More Info:
                        p.item__description=food.description
                